#!/usr/bin/env bash

SESSION="rails-$(basename "$PWD")"

tmux has-session -t "$SESSION" 2>/dev/null

if [ $? -ne 0 ]; then
  tmux new-session -d -s "$SESSION" -n dev

  # vertical split (top / bottom)
  tmux split-window -v

  tmux send-keys -t "$SESSION:dev.0" "bin/dev" C-m
  tmux send-keys -t "$SESSION:dev.1" "bin/jobs" C-m
fi

tmux attach -t "$SESSION"

