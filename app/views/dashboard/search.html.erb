<%= turbo_frame_tag "search-results" do %>
  <div class="mt-4 p-4 rounded-xl border border-woodsmoke-800 bg-woodsmoke-900">
    <% if @query.present? %>
      <% if @artists.any? %>
        <p class="text-sm text-woodsmoke-400 mb-3">Results for "<%= @query %>"</p>
        <ul class="space-y-3">
          <% @artists.each do |artist| %>
            <li class="p-3 rounded-lg border border-woodsmoke-700 bg-woodsmoke-800">
              <% if artist.is_a?(Artist) %>
                <p class="font-semibold text-woodsmoke-50"><%= artist.name %></p>
                <% if artist.real_name.present? %>
                  <p class="text-sm text-woodsmoke-400"><%= artist.real_name %></p>
                <% end %>
                <% if artist.profile.present? %>
                  <p class="mt-1 text-sm text-woodsmoke-300"><%= truncate(artist.profile, length: 200) %></p>
                <% end %>
              <% else %>
                <p class="font-semibold text-woodsmoke-50"><%= artist["name"] || artist["title"] %></p>
                <% if artist["real_name"].present? %>
                  <p class="text-sm text-woodsmoke-400"><%= artist["real_name"] %></p>
                <% end %>
                <% if artist["profile"].present? %>
                  <p class="mt-1 text-sm text-woodsmoke-300"><%= truncate(artist["profile"].to_s, length: 200) %></p>
                <% end %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-woodsmoke-400">No artists found for "<%= @query %>"</p>
      <% end %>
    <% end %>
  </div>
<% end %>
