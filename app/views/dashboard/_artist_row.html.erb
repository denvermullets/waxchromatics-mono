<li class="relative p-3 rounded-lg border border-woodsmoke-700 hover:border-crusta-400 transition-colors bg-woodsmoke-800 flex items-center gap-3 cursor-pointer">
  <div class="shrink-0 w-20 h-20 rounded bg-woodsmoke-700 flex items-center justify-center overflow-hidden">
    <svg class="w-10 h-10 text-woodsmoke-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8v2.4h19.2v-2.4c0-3.2-6.4-4.8-9.6-4.8z"/>
    </svg>
  </div>

  <div class="flex-1 min-w-0">
    <% if artist.is_a?(Artist) %>
      <p class="font-semibold text-woodsmoke-50"><%= artist.name %></p>
      <% if artist.real_name.present? %>
        <p class="text-sm text-woodsmoke-400"><%= artist.real_name %></p>
      <% end %>
      <% if artist.profile.present? %>
        <p class="mt-1 text-sm text-woodsmoke-300 truncate"><%= truncate(artist.profile, length: 80) %></p>
      <% end %>
    <% else %>
      <p class="font-semibold text-woodsmoke-50"><%= artist["name"] || artist["title"] %></p>
      <% if artist["real_name"].present? %>
        <p class="text-sm text-woodsmoke-400"><%= artist["real_name"] %></p>
      <% end %>
      <% if artist["profile"].present? %>
        <p class="mt-1 text-sm text-woodsmoke-300 truncate"><%= truncate(artist["profile"].to_s, length: 80) %></p>
      <% end %>
    <% end %>
  </div>

  <svg class="absolute bottom-3 right-3 w-4 h-4 text-woodsmoke-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"/>
  </svg>
</li>
