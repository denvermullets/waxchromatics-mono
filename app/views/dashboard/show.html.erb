<% if notice = flash[:notice] %>
  <p class="py-2 px-3 bg-bright-turquoise-950 mb-5 text-bright-turquoise-300 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>

<div class="max-w-2xl">
  <h1 class="text-3xl font-bold text-woodsmoke-50">Welcome back, <%= Current.user.username %></h1>
  <p class="mt-2 text-woodsmoke-300">What would you like to do?</p>

  <div class="mt-8 p-6 rounded-xl border border-woodsmoke-800 bg-woodsmoke-925">
    <h2 class="text-lg font-semibold text-woodsmoke-100">Search</h2>
    <%= form_with url: search_path, method: :get, data: { turbo_frame: "search-results" } do |f| %>
      <div class="mt-3 flex gap-3">
        <%= f.text_field :query, autocomplete: "off", placeholder: "Search by artist name...", class: "flex-1 rounded-lg border border-woodsmoke-700 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
        <%= f.submit "Search", class: "rounded-lg px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag "search-results" %>

<div class="max-w-2xl mt-8 flex gap-4">
  <%= link_to "Add a Release", new_release_path, class: "rounded-lg px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold transition-colors" %>
  <%= link_to "My Collection", my_collection_path, class: "rounded-lg px-5 py-2.5 border border-woodsmoke-700 text-woodsmoke-200 hover:border-woodsmoke-500 font-semibold transition-colors" %>
</div>
