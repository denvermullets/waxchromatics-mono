<%= turbo_frame_tag "external-results", src: external_search_path(query: @query, page: @page), loading: :lazy do %>
  <%# Skeleton loader shown while external results load %>
  <section class="mt-8">
    <h3 class="text-xs font-semibold uppercase tracking-wider text-woodsmoke-400 mb-3">
      From Discogs
      <span class="text-woodsmoke-500 animate-pulse">(...)</span>
    </h3>
    <div class="flex flex-col gap-3">
      <% 3.times do %>
        <div class="p-4 rounded-lg border border-woodsmoke-700 bg-woodsmoke-925">
          <div class="flex items-start gap-4">
            <div class="shrink-0 w-20 h-20 rounded bg-woodsmoke-700 animate-pulse"></div>
            <div class="flex-1 min-w-0 space-y-2">
              <div class="h-4 rounded bg-woodsmoke-700 animate-pulse w-3/4"></div>
              <div class="h-3 rounded bg-woodsmoke-700 animate-pulse w-1/2"></div>
              <div class="h-5 rounded bg-woodsmoke-700 animate-pulse w-1/4 mt-1"></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
