<div class="max-w-3xl">
  <h1 class="text-3xl font-bold text-woodsmoke-50">Add a Release</h1>
  <p class="mt-2 text-woodsmoke-300">Create a release manually.</p>

  <% if @release.errors.any? %>
    <div class="mt-4 py-2 px-3 bg-crusta-950 text-crusta-300 font-medium rounded-lg" id="errors">
      <% @release.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <%= form_with model: @release, class: "mt-8 space-y-6" do |form| %>
    <%= render "releases/form_section_artist", form: form %>
    <%= render "releases/form_section_release_group", form: form %>
    <%= render "releases/form_section_info", form: form %>
    <%= render "releases/form_section_formats", form: form %>
    <%= render "releases/form_section_labels", form: form %>
    <%= render "releases/form_section_tracks", form: form %>
    <%= render "releases/form_section_identifiers", form: form %>
    <%= render "releases/form_section_credits", form: form %>

    <div class="pt-2">
      <%= form.submit "Create Release", class: "rounded-lg px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold cursor-pointer transition-colors" %>
    </div>
  <% end %>
</div>
