<% credits = @release.release_artists.includes(:artist).where.not(artist_id: @artist.id) %>
<% if credits.any? %>
  <div class="p-5 rounded-xl border border-woodsmoke-800 bg-woodsmoke-925">
    <h3 class="text-xs font-semibold uppercase tracking-wider text-woodsmoke-400 mb-4">Credits</h3>
      <div class="divide-y divide-woodsmoke-800">
        <% credits.each do |credit| %>
          <div class="flex items-baseline justify-between gap-4 py-3 first:pt-0 last:pb-0">
            <span class="text-sm text-woodsmoke-400"><%= credit.role.presence || "â€”" %></span>
            <%= link_to credit.artist.name, artist_path(credit.artist), class: "text-sm text-crusta-400 hover:text-crusta-300 transition-colors shrink-0" %>
          </div>
        <% end %>
      </div>
  </div>
<% end %>
