<div class="rounded-xl border border-woodsmoke-800 bg-woodsmoke-925 p-5"
     data-controller="artist-search"
     data-artist-search-url-value="<%= search_artists_path %>">
  <h2 class="text-lg font-semibold text-woodsmoke-100 mb-4">Artist</h2>

  <%= form.hidden_field :primary_artist_id, data: { artist_search_target: "hiddenField" } %>

  <div class="relative">
    <label class="block text-sm font-semibold text-woodsmoke-100">Search artist</label>
    <input type="text"
           placeholder="Type to search artists..."
           autocomplete="off"
           class="block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none"
           data-artist-search-target="input"
           data-action="input->artist-search#search">

    <div class="absolute z-10 mt-1 w-full rounded-lg border border-woodsmoke-800 bg-woodsmoke-900 shadow-lg max-h-48 overflow-y-auto hidden"
         data-artist-search-target="results"></div>
  </div>

  <p class="mt-3 text-sm text-crusta-300 hidden" data-artist-search-target="selectedName">
  </p>

  <% if @release.errors[:release_artists].any? || @release.artists.empty? && @release.errors.any? %>
    <p class="mt-2 text-sm text-crusta-400">An artist is required.</p>
  <% end %>
</div>
