<div
  class="
    rounded-sm border border-woodsmoke-800 bg-woodsmoke-925 overflow-hidden
    text-sm
  "
  data-controller="section-toggle"
>
  <%# Display state â€” info table style %>
  <div data-section-toggle-target="display">
    <div class="grid grid-cols-2 divide-x divide-woodsmoke-800">
      <div class="flex items-baseline justify-between gap-2 px-5 py-3">
        <span class="text-woodsmoke-400">Country</span>

        <span class="text-woodsmoke-50 font-medium">
          <%= @release.country.presence || "\u2014" %>
        </span>
      </div>

      <div class="flex items-baseline justify-between gap-2 px-5 py-3">
        <span class="text-woodsmoke-400">Year</span>

        <span class="text-crusta-400 font-medium">
          <%= @release.released.presence || "\u2014" %>
        </span>
      </div>
    </div>

    <div class="border-t border-woodsmoke-800"></div>

    <div class="grid grid-cols-2 divide-x divide-woodsmoke-800">
      <div class="flex items-baseline justify-between gap-2 px-5 py-3">
        <span class="text-woodsmoke-400">Status</span>

        <span class="text-woodsmoke-50 font-medium">
          <%= @release.status.presence || "\u2014" %>
        </span>
      </div>

      <div class="flex items-baseline justify-between gap-2 px-5 py-3">
        <button
          type="button"
          class="ml-auto text-xs text-crusta-400 hover:text-crusta-300"
          data-section-toggle-target="toggleBtn"
          data-action="click->section-toggle#toggle"
        >
          Edit
        </button>
      </div>
    </div>
  </div>

  <%# Edit state %>
  <div class="hidden p-5 space-y-4" data-section-toggle-target="edit">
    <div class="flex items-center justify-between mb-2">
      <span class="text-xs font-semibold uppercase tracking-wider text-woodsmoke-400">
        Release Details
      </span>

      <button
        type="button"
        class="text-xs text-crusta-400 hover:text-crusta-300"
        data-section-toggle-target="toggleBtn"
        data-action="click->section-toggle#toggle"
      >
        Done
      </button>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= form.label :country, class: "block text-xs text-woodsmoke-400" %>
        <%= form.text_field :country, placeholder: "e.g. US", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-woodsmoke-950 px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>

      <div>
        <%= form.label :released, "Year", class: "block text-xs text-woodsmoke-400" %>
        <%= form.text_field :released, placeholder: "e.g. 2003", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-woodsmoke-950 px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>
    </div>

    <div>
      <%= form.label :status, class: "block text-xs text-woodsmoke-400" %>
      <%= form.text_field :status, placeholder: "e.g. Accepted", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-woodsmoke-950 px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
    </div>
  </div>
</div>
