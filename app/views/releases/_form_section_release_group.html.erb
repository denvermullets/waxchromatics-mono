<div class="mt-3" data-controller="release-group-lookup">
  <div class="flex items-center gap-2">
    <span class="text-xs text-woodsmoke-400 shrink-0">Release Group:</span>
    <%= form.text_field :release_group_title,
          required: true,
          placeholder: "Release group title",
          value: params.dig(:release, :release_group_title),
          data: { action: "input->release-group-lookup#reveal" },
          class: "flex-1 bg-transparent text-sm text-woodsmoke-300 placeholder-woodsmoke-600 border-none focus:ring-0 focus:outline-none p-0" %>
  </div>

  <div class="hidden mt-3 space-y-3" data-release-group-lookup-target="extraFields">
    <p class="text-xs text-woodsmoke-500">New release group â€” fill in extra details:</p>
    <div class="grid grid-cols-2 gap-3">
      <div>
        <label class="block text-xs text-woodsmoke-400">Year</label>
        <%= form.text_field :release_group_year,
              placeholder: "e.g. 2003",
              value: params.dig(:release, :release_group_year),
              class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>
      <div>
        <label class="block text-xs text-woodsmoke-400">Cover Art URL</label>
        <%= form.text_field :release_group_cover_art_url,
              placeholder: "https://...",
              value: params.dig(:release, :release_group_cover_art_url),
              class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>
    </div>
  </div>
</div>
