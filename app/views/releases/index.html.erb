<div class="max-w-4xl">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-woodsmoke-50">Releases</h1>
    <%= link_to "Add Release", new_release_path, class: "rounded-sm px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold transition-colors" %>
  </div>

  <% if @releases.any? %>
    <div class="mt-8 space-y-3">
      <% @releases.each do |release| %>
        <%= link_to artist_release_group_release_path(release.artist, release.release_group, release), class: "block p-4 rounded-sm border border-woodsmoke-800 bg-woodsmoke-900 hover:border-woodsmoke-600 transition-colors" do %>
          <p class="font-semibold text-woodsmoke-50"><%= release.title %></p>

          <p class="mt-1 text-sm text-woodsmoke-400">
            <%= [release.released, release.country].compact_blank.join(" Â· ") %>
          </p>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="mt-8 text-woodsmoke-400">No releases yet. Add your first one!</p>
  <% end %>
</div>
