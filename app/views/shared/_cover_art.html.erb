<%# locals: (thumb: nil, alt: nil, size: :md, vinyl_svg: nil) %>
<%
  sizes = {
    sm: { container: "w-16 h-16", icon: "w-8 h-8" },
    md: { container: "w-20 h-20", icon: "w-10 h-10" },
    lg: { container: "w-full sm:w-64 aspect-square rounded-xl border border-woodsmoke-700", icon: "w-20 h-20" },
    xl: { container: "w-full aspect-square rounded-xl border border-woodsmoke-700", icon: "w-24 h-24" }
  }
  s = sizes[size] || sizes[:md]
%>
<div class="shrink-0 <%= s[:container] %> rounded bg-woodsmoke-700 flex items-center justify-center overflow-hidden">
  <% if thumb.present? %>
    <%= image_tag thumb, alt: alt, class: "w-full h-full object-cover" %>
  <% elsif vinyl_svg.present? %>
    <%= image_tag vinyl_svg, alt: alt || "Vinyl record", class: "w-full h-full object-cover" %>
  <% else %>
    <svg class="<%= s[:icon] %> text-woodsmoke-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14.5c-2.49 0-4.5-2.01-4.5-4.5S9.51 7.5 12 7.5s4.5 2.01 4.5 4.5-2.01 4.5-4.5 4.5zm0-5.5c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1z"/>
    </svg>
  <% end %>
</div>
