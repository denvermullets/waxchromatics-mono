<% release = item.release %>
<% artist = release.artist %>
<% fmt = release.release_formats.first %>
<% vinyl_svg = fmt&.vinyl_image_path %>
<% cover_thumb = release.cover_art_url || release.release_group&.cover_art_url %>

<div class="rounded-lg border border-woodsmoke-800 bg-woodsmoke-925 overflow-hidden">
  <%# Cover art with vinyl peeking out %>
  <div class="relative w-full aspect-square bg-woodsmoke-900 flex items-center justify-center">
    <% if cover_thumb.present? && vinyl_svg.present? %>
      <div class="absolute top-1/2 -translate-y-1/2 right-[5%] w-[60%] aspect-square">
        <%= image_tag vinyl_svg, alt: "Vinyl record", class: "w-full h-full" %>
      </div>
      <div class="relative w-[65%] aspect-square rounded overflow-hidden" style="margin-right: auto; margin-left: 8%;">
        <%= image_tag cover_thumb, alt: release.title, loading: "lazy", decoding: "async", class: "w-full h-full object-cover" %>
      </div>
    <% elsif cover_thumb.present? %>
      <%= image_tag cover_thumb, alt: release.title, loading: "lazy", decoding: "async", class: "w-full h-full object-cover" %>
    <% elsif vinyl_svg.present? %>
      <div class="w-[50%] aspect-square">
        <%= image_tag vinyl_svg, alt: "Vinyl record", class: "w-full h-full" %>
      </div>
    <% else %>
      <svg class="w-16 h-16 text-woodsmoke-600" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14.5c-2.49 0-4.5-2.01-4.5-4.5S9.51 7.5 12 7.5s4.5 2.01 4.5 4.5-2.01 4.5-4.5 4.5zm0-5.5c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1z"/>
      </svg>
    <% end %>
  </div>

  <%# Info %>
  <div class="p-3">
    <% if artist %>
      <%= link_to artist.name, artist_path(artist), class: "text-xs text-crusta-400 hover:text-crusta-300 transition-colors block truncate" %>
    <% end %>
    <% if artist && release.release_group %>
      <%= link_to release.title,
                  artist_release_group_release_path(artist, release.release_group, release),
                  class: "text-sm font-medium text-woodsmoke-100 hover:text-woodsmoke-50 transition-colors block truncate mt-0.5" %>
    <% else %>
      <p class="text-sm font-medium text-woodsmoke-100 truncate mt-0.5"><%= release.title %></p>
    <% end %>

    <div class="flex flex-wrap gap-1 mt-2">
      <% if fmt&.name.present? %>
        <span class="px-1.5 py-0.5 text-xs rounded border border-woodsmoke-700 text-woodsmoke-400"><%= fmt.name %></span>
      <% end %>
      <% if release.released.present? %>
        <span class="px-1.5 py-0.5 text-xs rounded border border-woodsmoke-700 text-woodsmoke-400"><%= release.released %></span>
      <% end %>
      <% if fmt&.color.present? %>
        <span class="px-1.5 py-0.5 text-xs rounded border border-crusta-400 text-crusta-400"><%= fmt.color %></span>
      <% end %>
    </div>
  </div>
</div>
