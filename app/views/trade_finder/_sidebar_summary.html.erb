<div class="bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm p-6">
  <h2 class="text-xs font-semibold text-woodsmoke-400 uppercase tracking-widest mb-4">Trade Summary</h2>
  <div class="grid grid-cols-2 gap-4">
    <div class="text-center">
      <p class="text-2xl font-bold text-crusta-400"><%= @offering_count %></p>
      <p class="text-[10px] text-woodsmoke-400 uppercase tracking-wider mt-0.5">Offering</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-crusta-400"><%= @seeking_count %></p>
      <p class="text-[10px] text-woodsmoke-400 uppercase tracking-wider mt-0.5">Seeking</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-crusta-400"><%= @matches_count %></p>
      <p class="text-[10px] text-woodsmoke-400 uppercase tracking-wider mt-0.5">Matches</p>
    </div>
    <div class="text-center">
      <p class="text-2xl font-bold text-bright-turquoise-400"><%= @mutual_count %></p>
      <p class="text-[10px] text-woodsmoke-400 uppercase tracking-wider mt-0.5">Mutual</p>
    </div>
  </div>
</div>
