<%# locals: (trade:) %>
<%= form_with(
      model: TradeMessage.new,
      url: trade_trade_messages_path(username: params[:username], trade_id: trade),
      id: "new_trade_message",
      class: "flex gap-2 items-end"
    ) do |f| %>
  <%= f.text_field :body,
      placeholder: "Type a message...",
      autocomplete: "off",
      class: "flex-1 bg-woodsmoke-800 border border-woodsmoke-700 rounded-lg px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:outline-none focus:border-crusta-500/50" %>
  <%= f.submit "Send",
      class: "px-4 py-2 bg-crusta-500 hover:bg-crusta-400 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
<% end %>
