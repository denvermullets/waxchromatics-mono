<% if alert = flash[:alert] %>
  <p class="py-2 px-3 bg-crusta-950 mb-5 text-crusta-300 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
<% end %>

<h1 class="text-3xl font-bold text-woodsmoke-50">Update your password</h1>

<%= form_with url: password_path(params[:token]), method: :put, class: "mt-8 space-y-6" do |form| %>
  <div>
    <%= form.label :password, "New password", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password", maxlength: 72, class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Repeat new password", maxlength: 72, class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <%= form.submit "Save", class: "w-full rounded-lg px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold cursor-pointer transition-colors" %>
<% end %>
