<%= turbo_stream.append "#{@side}_items" do %>
  <%= render "trades/selected_item", collection_item: @collection_item, side: @side %>
<% end %>

<%= turbo_stream.append "#{@side}_hidden_fields" do %>
  <input
    type="hidden"
    name="<%= @side %>_items[]"
    value="<%= @collection_item.id %>"
    id="<%= @side %>_hidden_<%= @collection_item.id %>"
  >
<% end %>

<%= turbo_stream.update "#{@side}_results", "" %>
