<nav class="flex items-center gap-2 text-sm text-woodsmoke-400 mb-6">
  <%= link_to "Home", root_path, class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <%= link_to "Trades", trades_path(username: params[:username]), class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <span class="text-woodsmoke-50">Trade #<%= @trade.id %></span>
</nav>

<%# Header %>
<div class="flex items-center justify-between mb-6">
  <div class="flex items-center gap-3">
    <h1 class="text-2xl font-bold text-woodsmoke-50">Trade #<%= @trade.id %></h1>
    <span id="trade_status_badge">
      <%= render "trades/status_badge", status: @trade.status %>
    </span>
  </div>
  <%= render "trades/action_buttons", trade: @trade %>
</div>

<%# Partner card %>
<div class="bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm p-4 mb-6">
  <div class="flex items-center gap-3">
    <div class="shrink-0 w-12 h-12 rounded-full bg-woodsmoke-800 flex items-center justify-center overflow-hidden">
      <% if @partner.avatar_url.present? %>
        <%= image_tag @partner.avatar_url, alt: @partner.username, class: "w-full h-full object-cover" %>
      <% else %>
        <span class="text-lg font-semibold text-woodsmoke-400"><%= @partner.username[0].upcase %></span>
      <% end %>
    </div>
    <div>
      <p class="text-sm font-medium text-woodsmoke-100">
        Trading with
        <%= link_to @partner.username, profile_path(username: @partner.username),
            class: "text-crusta-400 hover:text-crusta-300 transition-colors" %>
      </p>
      <p class="text-xs text-woodsmoke-400">
        <% if @trade.initiator_id == Current.user.id %>
          You initiated this trade
        <% else %>
          <%= @partner.username %> initiated this trade
        <% end %>
        &middot; <%= time_ago_in_words(@trade.created_at) %> ago
      </p>
    </div>
  </div>
</div>

<% can_modify = @trade.can_modify?(Current.user) %>

<%# Items columns %>
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
  <%# You Send %>
  <div>
    <h3 class="text-xs font-semibold text-crusta-400 uppercase tracking-wider mb-3">
      You Send
      <span class="text-woodsmoke-500 normal-case font-normal">(<%= @send_items.size %>)</span>
    </h3>
    <div id="send_items" class="space-y-2">
      <% if @send_items.any? %>
        <% @send_items.each do |item| %>
          <%= render "trades/trade_item_card", item: item, trade: @trade, removable: can_modify %>
        <% end %>
      <% end %>
    </div>
    <% if @send_items.empty? %>
      <p id="send_items_empty" class="text-xs text-woodsmoke-500 py-4">No items.</p>
    <% end %>

    <% if can_modify %>
      <details class="mt-3">
        <summary class="text-xs text-woodsmoke-400 cursor-pointer hover:text-woodsmoke-200 transition-colors">
          + Add from your collection
        </summary>
        <div class="mt-2 relative">
          <input type="text" placeholder="Search your collection..." autocomplete="off"
                 data-controller="debounce-submit"
                 data-debounce-submit-url-value="<%= search_send_trade_trade_items_path(username: params[:username], trade_id: @trade) %>"
                 data-debounce-submit-frame-value="show_send_results"
                 data-action="input->debounce-submit#search"
                 class="w-full bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none">
          <turbo-frame id="show_send_results" class="absolute left-0 top-full z-50 w-full mt-1 max-h-48 overflow-y-auto"></turbo-frame>
        </div>
      </details>
    <% end %>
  </div>

  <%# You Receive %>
  <div>
    <h3 class="text-xs font-semibold text-blue-ribbon-400 uppercase tracking-wider mb-3">
      You Receive
      <span class="text-woodsmoke-500 normal-case font-normal">(<%= @receive_items.size %>)</span>
    </h3>
    <div id="receive_items" class="space-y-2">
      <% if @receive_items.any? %>
        <% @receive_items.each do |item| %>
          <%= render "trades/trade_item_card", item: item, trade: @trade, removable: can_modify %>
        <% end %>
      <% end %>
    </div>
    <% if @receive_items.empty? %>
      <p id="receive_items_empty" class="text-xs text-woodsmoke-500 py-4">No items.</p>
    <% end %>

    <% if can_modify %>
      <details class="mt-3">
        <summary class="text-xs text-woodsmoke-400 cursor-pointer hover:text-woodsmoke-200 transition-colors">
          + Add from <%= @partner.username %>'s collection
        </summary>
        <div class="mt-2 relative">
          <input type="text" placeholder="Search <%= @partner.username %>'s collection..." autocomplete="off"
                 data-controller="debounce-submit"
                 data-debounce-submit-url-value="<%= search_receive_trade_trade_items_path(username: params[:username], trade_id: @trade) %>"
                 data-debounce-submit-frame-value="show_receive_results"
                 data-action="input->debounce-submit#search"
                 class="w-full bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none">
          <turbo-frame id="show_receive_results" class="absolute left-0 top-full z-50 w-full mt-1 max-h-48 overflow-y-auto"></turbo-frame>
        </div>
      </details>
    <% end %>
  </div>
</div>

<%# Shipping (only when accepted) %>
<% if @trade.accepted? %>
  <%= render "trade_shipments/shipping_section", trade: @trade, partner: @partner %>
<% end %>

<%= turbo_stream_from @trade, :shipments, Current.user %>

<%# Activity Log & Messages %>
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div id="trade_activity_log">
    <%= render "trades/activity_log", activity: @activity %>
  </div>
  <%= render "trade_messages/messages_panel", trade: @trade, messages: @messages %>
</div>
