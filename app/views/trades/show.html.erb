<nav class="flex items-center gap-2 text-sm text-woodsmoke-400 mb-6">
  <%= link_to "Home", root_path, class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <%= link_to "Trades", trades_path(username: params[:username]), class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <span class="text-woodsmoke-50">Trade #<%= @trade.id %></span>
</nav>

<%# Header %>
<div class="flex items-center justify-between mb-6">
  <div class="flex items-center gap-3">
    <h1 class="text-2xl font-bold text-woodsmoke-50">
      Trade #<%= @trade.id %>
    </h1>

    <span id="trade_status_badge">
      <%= render "trades/status_badge", status: @trade.status %>
    </span>
  </div>

  <%= render "trades/action_buttons", trade: @trade %>
</div>

<%# Partner card %>
<div class="bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm p-4 mb-6">
  <div class="flex items-center gap-3">
    <div
      class="
        shrink-0 w-12 h-12 rounded-full bg-woodsmoke-800 flex items-center
        justify-center overflow-hidden
      "
    >
      <% if @partner.avatar_url.present? %>
        <%= image_tag @partner.avatar_url, alt: @partner.username, class: "w-full h-full object-cover" %>
      <% else %>
        <span class="text-lg font-semibold text-woodsmoke-400">
          <%= @partner.username[0].upcase %>
        </span>
      <% end %>
    </div>

    <div>
      <p class="text-sm font-medium text-woodsmoke-100">
        Trading with
        <%= link_to @partner.username, profile_path(username: @partner.username),
            class: "text-crusta-400 hover:text-crusta-300 transition-colors" %>
      </p>

      <p class="text-xs text-woodsmoke-400">
        <% if @trade.initiator_id == Current.user.id %>
          You initiated this trade
        <% else %>
          <%= @partner.username %>
          initiated this trade
        <% end %>
        &middot;
        <%= time_ago_in_words(@trade.created_at) %>
        ago
      </p>

      <% partner_avg = @partner.average_rating %>
      <% partner_trades = @partner.completed_trade_count %>

      <% if partner_avg || partner_trades > 0 %>
        <p class="text-xs text-woodsmoke-400 mt-0.5">
          <% if partner_avg %>
            <span class="text-crusta-400 font-medium"><%= partner_avg %></span>
            avg rating &middot;
          <% end %>
          <%= partner_trades %>
          completed trades
        </p>
      <% end %>
    </div>
  </div>
</div>

<% can_modify = @trade.can_modify?(Current.user) %>

<div id="trade_items_section">
  <% if can_modify %>
    <%# Hidden form that collects item IDs and submits the re-proposal %>
    <form
      id="trade_edit_form"
      action="<%= trade_path(username: params[:username], id: @trade) %>"
      method="post"
    >
      <input type="hidden" name="_method" value="patch">

      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>"
      >

      <div id="send_hidden_fields">
        <% @send_items.each do |item| %>
          <input
            type="hidden"
            name="send_items[]"
            value="<%= item.collection_item_id %>"
            id="send_hidden_<%= item.collection_item_id %>"
          >
        <% end %>
      </div>

      <div id="receive_hidden_fields">
        <% @receive_items.each do |item| %>
          <input
            type="hidden"
            name="receive_items[]"
            value="<%= item.collection_item_id %>"
            id="receive_hidden_<%= item.collection_item_id %>"
          >
        <% end %>
      </div>
    </form>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <%# You Send %>
      <div>
        <h3
          class="
            text-xs font-semibold text-crusta-400 uppercase tracking-wider
            mb-3
          "
        >
          You Send
        </h3>

        <div class="relative mb-3">
          <input
            type="text"
            placeholder="Search your collection..."
            autocomplete="off"
            data-controller="debounce-submit"
            data-debounce-submit-url-value="<%= search_send_trade_trade_items_path(username: params[:username], trade_id: @trade) %>"
            data-debounce-submit-frame-value="send_results"
            data-action="input->debounce-submit#search"
            class="
              w-full bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm
              px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500
              focus:border-crusta-400 focus:outline-none
            "
          >

          <turbo-frame
            id="send_results"
            class="
              absolute left-0 top-full z-50 w-full mt-1 max-h-48
              overflow-y-auto
            "
          ></turbo-frame>
        </div>

        <div id="send_items" class="space-y-2">
          <% @send_items.each do |item| %>
            <%= render "trades/selected_item", collection_item: item.collection_item, side: "send" %>
          <% end %>
        </div>
      </div>

      <%# You Receive %>
      <div>
        <h3
          class="
            text-xs font-semibold text-blue-ribbon-400 uppercase
            tracking-wider mb-3
          "
        >
          You Receive
        </h3>

        <div class="relative mb-3">
          <input
            type="text"
            placeholder="Search <%= @partner.username %>'s collection..."
            autocomplete="off"
            data-controller="debounce-submit"
            data-debounce-submit-url-value="<%= search_receive_trade_trade_items_path(username: params[:username], trade_id: @trade) %>"
            data-debounce-submit-frame-value="receive_results"
            data-action="input->debounce-submit#search"
            class="
              w-full bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm
              px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500
              focus:border-crusta-400 focus:outline-none
            "
          >

          <turbo-frame
            id="receive_results"
            class="
              absolute left-0 top-full z-50 w-full mt-1 max-h-48
              overflow-y-auto
            "
          ></turbo-frame>
        </div>

        <div id="receive_items" class="space-y-2">
          <% @receive_items.each do |item| %>
            <%= render "trades/selected_item", collection_item: item.collection_item, side: "receive" %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <%# === Read-only mode === %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <%# You Send %>
      <div>
        <h3
          class="
            text-xs font-semibold text-crusta-400 uppercase tracking-wider
            mb-3
          "
        >
          You Send
          <span class="text-woodsmoke-500 normal-case font-normal">(<%= @send_items.size %>)</span>
        </h3>

        <% if @send_items.any? %>
          <div class="space-y-2">
            <% @send_items.each do |item| %>
              <%= render "trades/trade_item_card", item: item %>
            <% end %>
          </div>
        <% else %>
          <p class="text-xs text-woodsmoke-500 py-4">No items.</p>
        <% end %>
      </div>

      <%# You Receive %>
      <div>
        <h3
          class="
            text-xs font-semibold text-blue-ribbon-400 uppercase
            tracking-wider mb-3
          "
        >
          You Receive
          <span class="text-woodsmoke-500 normal-case font-normal">(<%= @receive_items.size %>)</span>
        </h3>

        <% if @receive_items.any? %>
          <div class="space-y-2">
            <% @receive_items.each do |item| %>
              <%= render "trades/trade_item_card", item: item %>
            <% end %>
          </div>
        <% else %>
          <p class="text-xs text-woodsmoke-500 py-4">No items.</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%# Shipping (when accepted or delivered) %>
<% if @trade.accepted? || @trade.delivered? %>
  <%= render "trade_shipments/shipping_section", trade: @trade, partner: @partner %>
<% end %>

<%# Rating details (when both have rated - double-blind reveal) %>
<% if @trade.delivered? && @trade.both_rated? %>
  <% my_rating = @trade.rating_by(Current.user) %>
  <% partner_rating = @trade.rating_by(@partner) %>
  <div class="bg-woodsmoke-925 border border-woodsmoke-800 rounded-sm p-4 mb-6">
    <h3
      class="
        text-[10px] font-semibold text-woodsmoke-500 uppercase
        tracking-wider mb-3
      "
    >
      Ratings
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h4 class="text-xs font-medium text-woodsmoke-300 mb-1">Your Rating</h4>

        <p class="text-xs text-woodsmoke-400">
          Overall: <%= my_rating.overall_rating %>/5 &middot; Communication:
          <%= my_rating.communication_rating %>/5 &middot; Packing:
          <%= my_rating.packing_shipping_rating %>/5
        </p>
      </div>

      <div>
        <h4 class="text-xs font-medium text-woodsmoke-300 mb-1">
          <%= @partner.username %>'s Rating
        </h4>

        <p class="text-xs text-woodsmoke-400">
          Overall: <%= partner_rating.overall_rating %>/5 &middot;
          Communication: <%= partner_rating.communication_rating %>/5 &middot;
          Packing: <%= partner_rating.packing_shipping_rating %>/5 &middot;
          Condition: <%= partner_rating.condition_accuracy.titleize %>
        </p>

        <% if partner_rating.tags.present? %>
          <div class="flex flex-wrap gap-1 mt-2">
            <% partner_rating.tags.each do |tag| %>
              <span
                class="
                  px-2 py-0.5 text-[10px] rounded-full bg-crusta-400/10
                  text-crusta-400
                "
              >
                <%= tag.titleize %>
              </span>
            <% end %>
          </div>
        <% end %>

        <% if partner_rating.comments.present? %>
          <p class="text-xs text-woodsmoke-300 mt-2 italic">
            "<%= partner_rating.comments %>"
          </p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= turbo_stream_from @trade, :shipments, Current.user %>
<%= turbo_stream_from @trade, :updates, Current.user %>

<%# Activity Log & Messages %>
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div id="trade_activity_log">
    <%= render "trades/activity_log", activity: @activity %>
  </div>

  <%= render "trade_messages/messages_panel", trade: @trade, messages: @messages %>
</div>
