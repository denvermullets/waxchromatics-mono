<nav class="flex items-center gap-2 text-sm text-woodsmoke-400 mb-6">
  <%= link_to "Home", root_path, class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <%= link_to "Trades", trades_path(username: params[:username]), class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <span class="text-woodsmoke-50">New Trade</span>
</nav>

<h1 class="text-2xl font-bold text-woodsmoke-50 mb-6">New Trade</h1>

<%= form_with model: @trade, url: trades_path(username: params[:username]),
    data: {
      controller: "trade-form",
      trade_form_search_users_url_value: search_users_trades_path,
      trade_form_search_collection_url_value: search_collection_trades_path,
      trade_form_search_recipient_collection_url_value: search_recipient_collection_trades_path,
      trade_form_pre_send_value: @pre_send_items.to_json,
      trade_form_pre_receive_value: @pre_receive_items.to_json,
      trade_form_recipient_id_value: @recipient&.id || "",
      trade_form_recipient_username_value: @recipient&.username || ""
    } do |f| %>

  <%# Recipient selection %>
  <div class="mb-6">
    <label class="block text-sm font-medium text-woodsmoke-200 mb-2">Trade Partner</label>
    <div class="relative">
      <%= f.hidden_field :recipient_id, data: { trade_form_target: "recipientId" } %>

      <div data-trade-form-target="recipientDisplay" class="<%= @recipient ? '' : 'hidden' %>">
        <div class="flex items-center gap-2 bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm px-3 py-2">
          <span data-trade-form-target="recipientSearch" class="text-sm text-woodsmoke-100"><%= @recipient&.username %></span>
          <button type="button" data-action="click->trade-form#clearRecipient"
                  class="ml-auto text-woodsmoke-500 hover:text-crusta-400 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>

      <div data-trade-form-target="recipientInput" class="<%= @recipient ? 'hidden' : '' %>">
        <input type="text" placeholder="Search users..." autocomplete="off"
               data-action="input->trade-form#searchUsers"
               class="w-full bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none">
        <div data-trade-form-target="recipientResults"
             class="hidden absolute z-10 w-full mt-1 bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm max-h-48 overflow-y-auto"></div>
      </div>
    </div>
  </div>

  <%# Two column layout for items %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
    <%# You Send %>
    <div>
      <label class="block text-xs font-semibold text-crusta-400 uppercase tracking-wider mb-2">You Send</label>
      <div class="relative mb-3">
        <input type="text" placeholder="Search your collection..." autocomplete="off"
               data-action="input->trade-form#searchSend"
               data-trade-form-target="sendSearch"
               class="w-full bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none">
        <div data-trade-form-target="sendResults"
             class="hidden absolute z-10 w-full mt-1 bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm max-h-48 overflow-y-auto"></div>
      </div>
      <div data-trade-form-target="sendItems" class="space-y-2"></div>
      <div data-trade-form-target="sendHiddenFields"></div>
    </div>

    <%# You Receive %>
    <div>
      <label class="block text-xs font-semibold text-blue-ribbon-400 uppercase tracking-wider mb-2">You Receive</label>
      <div class="relative mb-3">
        <input type="text" placeholder="Search their collection..." autocomplete="off"
               data-action="input->trade-form#searchReceive"
               data-trade-form-target="receiveSearch"
               class="w-full bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none">
        <div data-trade-form-target="receiveResults"
             class="hidden absolute z-10 w-full mt-1 bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm max-h-48 overflow-y-auto"></div>
      </div>
      <div data-trade-form-target="receiveItems" class="space-y-2"></div>
      <div data-trade-form-target="receiveHiddenFields"></div>
    </div>
  </div>

  <%# Notes %>
  <div class="mb-6">
    <label class="block text-sm font-medium text-woodsmoke-200 mb-2">Notes (optional)</label>
    <%= f.text_area :notes, rows: 3, placeholder: "Add a message to your trade partner...",
        class: "w-full bg-woodsmoke-900 border border-woodsmoke-800 rounded-sm px-3 py-2 text-sm text-woodsmoke-100 placeholder-woodsmoke-500 focus:border-crusta-400 focus:outline-none resize-none" %>
  </div>

  <%# Submit buttons %>
  <div class="flex items-center gap-3">
    <%= f.submit "Save as Draft", name: "commit", value: "draft",
        class: "px-4 py-2 text-sm rounded-sm bg-woodsmoke-800 text-woodsmoke-300 hover:bg-woodsmoke-700 transition-colors cursor-pointer" %>
    <%= f.submit "Propose Trade", name: "commit", value: "propose",
        class: "px-4 py-2 text-sm rounded-sm bg-crusta-400 text-woodsmoke-950 font-medium hover:bg-crusta-300 transition-colors cursor-pointer" %>
  </div>
<% end %>
