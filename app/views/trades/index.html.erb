<nav class="flex items-center gap-2 text-sm text-woodsmoke-400 mb-6">
  <%= link_to "Home", root_path, class: "hover:text-woodsmoke-200 transition-colors" %>
  <span>/</span>
  <span class="text-woodsmoke-50">Trades</span>
</nav>

<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-woodsmoke-50">Trades</h1>
  <%= link_to new_trade_path(username: params[:username]), class: "px-4 py-2 text-sm rounded-sm bg-crusta-400 text-woodsmoke-950 font-medium hover:bg-crusta-300 transition-colors" do %>
    + New Trade
  <% end %>
</div>

<%= render "trades/stats_cards", stats: @stats %>
<%= render "trades/status_tabs", status_filter: @status_filter, status_counts: @status_counts %>

<% if @trades.any? %>
  <div class="space-y-3">
    <% @trades.each do |trade| %>
      <%= render "trades/trade_row", trade: trade %>
    <% end %>
  </div>

  <% if @pagy.last > 1 %>
    <div class="flex items-center justify-center gap-4 mt-6">
      <span class="text-xs text-woodsmoke-500">Page <%= @pagy.page %> of <%= @pagy.last %></span>
      <div class="flex gap-2">
        <% if @pagy.previous %>
          <%= link_to trades_path(username: params[:username], status: @status_filter, page: @pagy.previous),
              class: "px-3 py-1.5 text-xs rounded-sm bg-woodsmoke-800 text-woodsmoke-300 hover:bg-woodsmoke-700 transition-colors" do %>
            &larr; Prev
          <% end %>
        <% end %>
        <% if @pagy.next %>
          <%= link_to trades_path(username: params[:username], status: @status_filter, page: @pagy.next),
              class: "px-3 py-1.5 text-xs rounded-sm bg-woodsmoke-800 text-woodsmoke-300 hover:bg-woodsmoke-700 transition-colors" do %>
            Next &rarr;
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <div class="text-center py-16">
    <svg class="w-16 h-16 text-woodsmoke-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
    </svg>
    <p class="text-woodsmoke-400 text-lg">No trades yet.</p>
    <p class="text-woodsmoke-500 text-sm mt-2">Start by proposing a trade with another user.</p>
  </div>
<% end %>
