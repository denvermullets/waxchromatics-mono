<section id="collection" data-settings-section class="scroll-mt-20">
  <h2 class="text-lg font-bold text-woodsmoke-50 mb-1">Collection</h2>

  <p class="text-sm text-woodsmoke-400 mb-6">
    How your collection is displayed
  </p>

  <div class="divide-y divide-woodsmoke-800">
    <%= render "settings/toggle_row",
      field: :collection_list_view,
      label: "List view",
      description: "Show your collection as a list instead of a grid",
      value: @user.setting.collection_list_view,
      enabled: true,
      form_url: user_settings_setting_path(username: @user.username) %>
  </div>
</section>
