<div class="max-w-5xl mx-auto">
  <nav class="flex items-center gap-2 text-sm text-woodsmoke-400 mb-8">
    <%= link_to @user.username, profile_path(username: @user.username), class: "hover:text-woodsmoke-50 transition-colors" %>
    <span>/</span>
    <span class="text-woodsmoke-100">Settings</span>
  </nav>

  <% if notice.present? %>
    <div class="py-2 px-3 bg-emerald-950 mb-5 text-emerald-300 font-medium rounded-sm">
      <p><%= notice %></p>
    </div>
  <% end %>

  <div class="flex flex-col lg:flex-row gap-8">
    <%# Sidebar %>
    <div class="lg:w-48 shrink-0"><%= render "settings/sidebar" %></div>

    <%# Content %>
    <div class="flex-1 min-w-0 space-y-12">
      <%= render "settings/section_profile" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_collection" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_appearance" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_trading" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_privacy" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_notifications" %>
      <hr class="border-woodsmoke-800">
      <%= render "settings/section_account" %>
    </div>
  </div>
</div>
