<% if @user.errors.any? %>
  <div class="py-2 px-3 bg-crusta-950 mb-5 text-crusta-300 font-medium rounded-sm" id="errors">
    <% @user.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<h1 class="text-3xl font-bold text-woodsmoke-50">Create your account</h1>
<p class="mt-2 text-woodsmoke-300">Start organizing your vinyl collection</p>

<%= form_with model: @user, url: registration_path, class: "mt-8 space-y-6" do |form| %>
  <div>
    <%= form.label :email_address, "Email", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "email", placeholder: "you@example.com", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :username, "Username", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.text_field :username, required: true, autocomplete: "username", placeholder: "Choose a username", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :password, "Password", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Create a password", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-woodsmoke-100" %>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your password", class: "block w-full mt-1 rounded-sm border border-woodsmoke-800 bg-wax-grey px-3 py-2.5 text-woodsmoke-50 placeholder-woodsmoke-500 shadow-sm focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
  </div>

  <%= form.submit "Sign up", class: "w-full rounded-sm px-5 py-2.5 bg-crusta-400 hover:bg-crusta-500 text-woodsmoke-950 font-semibold cursor-pointer transition-colors" %>
<% end %>
