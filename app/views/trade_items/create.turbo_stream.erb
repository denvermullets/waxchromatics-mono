<% side = @trade_item.user_id == Current.user.id ? 'send' : 'receive' %>

<%= turbo_stream.append "#{side}_items" do %>
  <%= render "trades/trade_item_card", item: @trade_item, trade: @trade, removable: true %>
<% end %>

<%= turbo_stream.remove "#{side}_items_empty" %>

<%= turbo_stream.update "trade_status_badge" do %>
  <%= render "trades/status_badge", status: @trade.status %>
<% end %>

<%= turbo_stream.replace "trade_action_buttons" do %>
  <%= render "trades/action_buttons", trade: @trade %>
<% end %>
