<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="mb-6 flex items-center gap-2 text-sm text-woodsmoke-400">
    <%= link_to "Home", root_path, class: "hover:text-crusta-400 transition-colors" %>
    <span>/</span>
    <%= link_to @artist.name, artist_path(@artist), class: "hover:text-crusta-400 transition-colors" %>
    <span>/</span>
    <span class="text-woodsmoke-300"><%= @release_type.pluralize %></span>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <%# Left column: Artist info %>
    <div class="lg:col-span-1 space-y-6">
      <%= render "artists/artist_header" %>
    </div>

    <%# Right column: Release groups %>
    <div class="lg:col-span-2">
      <h2
        class="
          text-xs font-semibold uppercase tracking-wider text-woodsmoke-400
          mb-4
        "
      >
        <%= @release_type.pluralize %>
      </h2>

      <div class="space-y-3">
        <% @release_groups.each do |release_group| %>
          <%= render 'artists/release_group_card', release_group: release_group, artist: @artist %>
        <% end %>
      </div>
    </div>
  </div>
</div>
