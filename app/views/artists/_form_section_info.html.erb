<div class="rounded-xl border border-woodsmoke-800 bg-woodsmoke-925 overflow-hidden text-sm">
  <div class="p-5 space-y-4">
    <span class="text-xs font-semibold uppercase tracking-wider text-woodsmoke-400">Artist Details</span>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= form.label :real_name, "Real Name", class: "block text-xs text-woodsmoke-400" %>
        <%= form.text_field :real_name, placeholder: "e.g. John Smith", class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>
      <div>
        <%= form.label :discogs_id, "Discogs ID", class: "block text-xs text-woodsmoke-400" %>
        <%= form.number_field :discogs_id, placeholder: "e.g. 12345", class: "block w-full mt-1 rounded-lg border border-woodsmoke-800 bg-wax-grey px-3 py-2 text-sm text-woodsmoke-50 placeholder-woodsmoke-500 focus:border-crusta-400 focus:ring-1 focus:ring-crusta-400 focus:outline-none" %>
      </div>
    </div>
  </div>
</div>
