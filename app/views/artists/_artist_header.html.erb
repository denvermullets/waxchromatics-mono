<div class="p-5 rounded-xl border border-woodsmoke-800 bg-woodsmoke-900">
  <div class="w-full aspect-square rounded-lg bg-woodsmoke-700 flex items-center justify-center overflow-hidden mb-4">
    <svg class="w-20 h-20 text-woodsmoke-500" fill="currentColor" viewBox="0 0 24 24">
      <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8v2.4h19.2v-2.4c0-3.2-6.4-4.8-9.6-4.8z"/>
    </svg>
  </div>

  <h1 class="text-2xl font-bold text-woodsmoke-50">
    <%= @artist&.name || @api_artist&.dig("name") || "Unknown Artist" %>
  </h1>

  <% real_name = @artist&.real_name || @api_artist&.dig("realname") %>
  <% if real_name.present? %>
    <p class="text-sm text-woodsmoke-400 mt-1"><%= real_name %></p>
  <% end %>

  <% profile = @artist&.profile || @api_artist&.dig("profile") %>
  <% if profile.present? %>
    <p class="mt-3 text-sm text-woodsmoke-300 leading-relaxed whitespace-pre-line"><%= profile %></p>
  <% end %>

  <% if @local_releases.any? %>
    <span class="inline-block mt-3 px-2 py-1 text-xs font-medium rounded bg-woodsmoke-800 text-woodsmoke-300">
      <%= @local_releases.count %> releases in collection
    </span>
  <% end %>
</div>
