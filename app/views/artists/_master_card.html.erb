<div class="p-4 rounded-lg border border-woodsmoke-700 hover:border-crusta-400 transition-colors bg-woodsmoke-800 flex items-start gap-4">
  <div class="shrink-0 w-16 h-16 rounded bg-woodsmoke-700 flex items-center justify-center overflow-hidden">
    <% if master["thumb"].present? %>
      <%= image_tag master["thumb"], alt: master["title"], class: "w-full h-full object-cover" %>
    <% else %>
      <svg class="w-8 h-8 text-woodsmoke-500" fill="currentColor" viewBox="0 0 24 24">
        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 14.5c-2.49 0-4.5-2.01-4.5-4.5S9.51 7.5 12 7.5s4.5 2.01 4.5 4.5-2.01 4.5-4.5 4.5zm0-5.5c-.55 0-1 .45-1 1s.45 1 1 1 1-.45 1-1-.45-1-1-1z"/>
      </svg>
    <% end %>
  </div>

  <div class="flex-1 min-w-0">
    <div class="flex items-start justify-between gap-2">
      <p class="font-semibold text-woodsmoke-50 truncate"><%= master["title"] %></p>
      <% if master["year"].present? && master["year"].to_i > 0 %>
        <span class="shrink-0 text-xs text-woodsmoke-400"><%= master["year"] %></span>
      <% end %>
    </div>

    <% genres = (master["master_genres"] || []).map { |g| g.is_a?(Hash) ? g["genre"] : g } %>
    <% styles = (master["master_styles"] || []).map { |s| s.is_a?(Hash) ? s["style"] : s } %>
    <% tags = (genres + styles).compact.reject(&:blank?) %>

    <% if tags.any? %>
      <div class="flex flex-wrap gap-1 mt-2">
        <% tags.first(5).each do |tag| %>
          <span class="px-1.5 py-0.5 text-xs rounded bg-woodsmoke-700 text-woodsmoke-300"><%= tag %></span>
        <% end %>
      </div>
    <% end %>

    <% if master["vinyl"] %>
      <span class="inline-block mt-2 px-1.5 py-0.5 text-xs rounded bg-crusta-900/30 text-crusta-400 font-medium">Vinyl</span>
    <% end %>
  </div>
</div>
