<% local_release_group = ReleaseGroup.find_by(discogs_id: master["id"]) %>

<% card_content = capture do %>
  <%= render "shared/cover_art", thumb: (local_release_group&.cover_art_url || master["thumb"]), alt: master["title"], size: :md %>

  <div class="flex-1 min-w-0">
    <div class="flex items-start justify-between gap-2">
      <p class="font-semibold text-woodsmoke-50 truncate"><%= master["title"] %></p>
      <% if master["year"].present? && master["year"].to_i > 0 %>
        <span class="shrink-0 text-xs text-woodsmoke-400"><%= master["year"] %></span>
      <% end %>
    </div>

    <% genres = (master["master_genres"] || []).map { |g| g.is_a?(Hash) ? g["genre"] : g } %>
    <% styles = (master["master_styles"] || []).map { |s| s.is_a?(Hash) ? s["style"] : s } %>
    <% tags = (genres + styles).compact.reject(&:blank?) %>

    <% if tags.any? %>
      <div class="flex flex-wrap gap-1 mt-2">
        <% tags.first(5).each do |tag| %>
          <span class="px-1.5 py-0.5 text-xs rounded bg-woodsmoke-700 text-woodsmoke-300"><%= tag %></span>
        <% end %>
      </div>
    <% end %>

    <div class="flex flex-wrap gap-1 mt-2">
      <% if master["vinyl"] %>
        <span class="px-1.5 py-0.5 text-xs rounded bg-crusta-900/30 text-crusta-400 font-medium">Vinyl</span>
      <% end %>
      <% if local_release_group %>
        <% release_count = local_release_group.releases.size %>
        <% if release_count > 0 %>
          <span class="px-1.5 py-0.5 text-xs rounded bg-woodsmoke-700 text-woodsmoke-300"><%= release_count %> <%= "version".pluralize(release_count) %></span>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>

<% if local_release_group %>
  <%= link_to release_group_path(local_release_group), class: "block p-4 rounded-lg border border-woodsmoke-700 hover:border-crusta-400 transition-colors bg-woodsmoke-800 flex items-start gap-4" do %>
    <%= card_content %>
  <% end %>
<% else %>
  <div class="p-4 rounded-lg border border-woodsmoke-700 hover:border-crusta-400 transition-colors bg-woodsmoke-800 flex items-start gap-4">
    <%= card_content %>
  </div>
<% end %>
