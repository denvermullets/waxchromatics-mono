<div class="max-w-7xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to "javascript:history.back()", class: "inline-flex items-center gap-1 text-sm text-woodsmoke-400 hover:text-crusta-400 transition-colors" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"/>
      </svg>
      Back
    <% end %>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-8">
      <%= render "release_groups/header" %>
      <%= render "release_groups/versions_table" %>
    </div>

    <div class="lg:col-span-1">
      <%= render "release_groups/tracklist" %>
    </div>
  </div>
</div>
