<div class="flex flex-col items-center mx-1 flex-shrink-0">
  <div class="flex items-center gap-0">
    <div class="w-8 h-px bg-woodsmoke-600"></div>
    <button
      type="button"
      data-edge-detail-target="pill"
      data-action="click->edge-detail#select"
      data-edge-index="<%= index %>"
      class="flex flex-col items-center px-3 py-1.5 rounded-sm bg-woodsmoke-800 border border-woodsmoke-700 hover:border-crusta-400 text-woodsmoke-300 hover:text-crusta-400 transition-colors cursor-pointer"
    >
      <span class="text-xs font-medium whitespace-nowrap"><%= edge[:role].presence || "credit" %></span>
      <span class="text-[10px] text-woodsmoke-500">click to expand</span>
    </button>
    <div class="w-8 h-px bg-woodsmoke-600"></div>
  </div>
</div>
